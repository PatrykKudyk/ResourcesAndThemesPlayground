<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResThemePlayground" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorYellowDark</item>
        <item name="colorPrimaryVariant">@color/colorYellowDarkDark</item>
        <item name="colorOnPrimary">@color/colorBlack</item>\

        <item name="colorSecondary">@color/colorDirtyOrangeDark</item>
        <item name="colorSecondaryVariant">@color/colorDirtyOrangeDarkDark</item>
        <item name="colorOnSecondary">@color/colorEcru</item>

        <item name="colorAccent">@color/colorRedDarkDark</item>
